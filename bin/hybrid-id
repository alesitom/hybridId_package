#!/usr/bin/env php
<?php

declare(strict_types=1);

if (php_sapi_name() !== 'cli') {
    exit(1);
}

// Autoload: prefer composer, fallback to direct require
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$loaded = false;
foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require $path;
        $loaded = true;
        break;
    }
}

if (!$loaded) {
    fwrite(STDERR, 'Composer autoloader not found. Run "composer install" first.' . PHP_EOL);
    exit(1);
}

use HybridId\Cli\Application;

$app = new Application();
exit($app->run($_SERVER['argv'] ?? []));
